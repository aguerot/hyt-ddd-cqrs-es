{
    "compilerOptions": {
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "resolveJsonModule": true,
        "declaration": true,
        "module": "commonjs",
        "moduleResolution": "node",
        "target": "es6",
        "watch": false,
        "sourceMap": true,
        "skipLibCheck" : true,
        "outDir": "./dist",
        "typeRoots": [
          "node_modules/@types",
          "typings.d.ts"
        ],
        "lib": [
          "es6",
          "dom",
          "es2017"
        ]
      },
      "exclude": [
        "node_modules",
        "dist",
        "**/*.spec.ts"
      ]
}